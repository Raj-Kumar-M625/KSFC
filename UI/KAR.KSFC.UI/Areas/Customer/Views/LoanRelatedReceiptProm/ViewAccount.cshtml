@model KAR.KSFC.Components.Common.Dto.LoanAccounting.LoanAccountingDTO
@{
   
}
<div><h2 id="textCenter">Loan Related Receipt</h2></div>

<div id="LoanReceiptDIV">
    <span id="spanErrorMsg" class="text-danger"></span>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="ReceiptPayment-tab" data-bs-toggle="tab" data-bs-target="#ReceiptPayment" type="button" role="tab" aria-controls="ReceiptPayment" aria-selected="false">Receipt Payment</button>
            <div class="progress">
                <div id="ReceiptPaymentProgressBar" class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="ReceiptPayment" role="tabpanel" aria-labelledby="ReceiptPayment-tab">
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                @await Html.PartialAsync("_AccountNumber")
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                        <button class="accordion-button" id="Loan_Receipt_accor_btn" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                            <b>Loan Related Receipts</b>
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                        <div class="accordion-body">
                            <div id="view-all-LoanReceipt">
                                @await Html.PartialAsync("/Areas/Customer/Views/LoanRelatedReceiptProm/LoanRelatedReceipts/_ViewAll.cshtml",Model.AllGenerateReceiptList)
                            </div>
                            <div class="modal" tabindex="-1" role="dialog" id="modelLoanReceiptDetails">
                                <div class="modal-dialog modal-xl" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"></h5>
                                            <button type="button" class="close" data-dismiss="modal" onclick="ClosePopupFormLAProm();" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/Customer/LoanRelatedReceiptProm" class="btn btn-info btn-lg text-white mb-2 mt-2">Previous</a>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                        <button class="accordion-button collapsed" id="Loan_Payment_accor_btn" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="true" aria-controls="panelsStayOpen-collapseThree">
                            <b>Loan Related Payments</b>
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingThree">
                        <div class="accordion-body">
                            <div id="view-all-LoanPayment">
                                @await Html.PartialAsync("/Areas/Customer/Views/LoanRelatedReceiptProm/LoanRelatedPayments/_ViewAll.cshtml",Model.PaymentRecipetList)
                            </div>
                            <div class="modal" tabindex="-1" role="dialog" id="modelLoanPaymentList">
                                <div class="modal-dialog modal-xl" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"></h5>
                                            <button type="button" class="close" data-dismiss="modal" onclick="ClosePopupFormLAProm();" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/Customer/LoanRelatedReceiptProm" class="btn btn-info btn-lg text-white mb-2 mt-2">Previous</a>
                            <input type="submit" onclick="location.href=/Customer/;" class="btn btn-info btn-lg mb-2 mt-2 next float-end" id="savebtnLoanPaymentTab" value="&nbsp &nbsp Next &nbsp &nbsp"  />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/crud.js" asp-append-version="true"></script>
<script type="text/javascript">
</script>
