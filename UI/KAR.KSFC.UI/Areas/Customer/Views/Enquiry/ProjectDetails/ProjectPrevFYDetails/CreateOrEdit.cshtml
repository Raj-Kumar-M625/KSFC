@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.ProjectDetails.ProjectFinancialYearDetailsDTO
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.EnqPjfinId" onsubmit="return jQueryAjaxPostPDPY(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.EnqPjfinId)
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Financial Year</label>
            @Html.DropDownListFor(model => model.FinyearCode, new SelectList(ViewBag.FinancialYearsList,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
            <span asp-validation-for="FinyearCode" class="text-danger"></span>
        </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.WhPjprov, new { @class = "form-check-inline" })
                <label for="inputEmail4" class="form-label">Provisional Balance Sheet Details</label>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Financial Component</label>
                @Html.DropDownListFor(model => model.FincompCd, new SelectList(ViewBag.ListFinancialComponent,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="FincompCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Amount (In Lakhs.)</label>
                @Html.TextBoxFor(model => model.EnqPjfinamt, new { @class = "form-control",@type="number",@min="0"  })
                <span asp-validation-for="EnqPjfinamt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
