@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.ProjectDetails.ProjectMeansOfFinanceDTO
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.EnqPjmfId" onsubmit="return jQueryAjaxPostPDMF(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="inputEmail4" class="form-label">Category of Means of Finance</label>
                @Html.DropDownListFor(m=>m.MfcatCd,new SelectList(ViewBag.ListProjectMeansOfFinanceCat,"Value", "Text"), "-- Please select --", new { @class = "form-select",@id="ddlfinancecatEnq"  })
                <span asp-validation-for="MfcatCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Finance Type</label>
                @Html.DropDownListFor(model => model.PjmfCd, new SelectList(ViewBag.ListProjectFinanceType,"Value", "Text"), "-- Please select --", new { @class = "form-select",@id="ddlfinanceTypeEnq" })
                <span asp-validation-for="PjmfCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Value (In Lakhs.)</label>
                @Html.TextBoxFor(model => model.EnqPjmfValue, new { @class = "form-control",@type="number",@min="0"  })
                <span asp-validation-for="EnqPjmfValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
