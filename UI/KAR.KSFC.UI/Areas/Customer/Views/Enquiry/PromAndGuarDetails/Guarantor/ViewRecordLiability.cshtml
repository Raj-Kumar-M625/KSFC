@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.PromoterGuarantorDetails.GuarantorLiabilityDetailsDTO;
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="ViewRecordLiability" asp-route-id="@Model.EnqGuarliabId" onsubmit="ClearPopupFormPGGD();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.EnqGuarliabId)
            
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Name Of Guarantor</label>
                @if (ViewBag.GuarantorDetailsList != null)
                {
                    @Html.DropDownListFor(model => model.PromoterCode, new SelectList(ViewBag.GuarantorDetailsList, "PromoterMaster.PromoterCode", "PromoterMaster.PromoterName"),
                   "-- Please select --", new { @class = "form-select", @disabled = "disabled" })
                }
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Liability Description</label>
                @Html.TextAreaFor(model => model.GuarLiabDesc, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Value (In Lakhs.)</label>
                @Html.TextBoxFor(model => model.GuarLiabValue, new { @class = "form-control", @disabled = "disabled" })
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Close" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>

