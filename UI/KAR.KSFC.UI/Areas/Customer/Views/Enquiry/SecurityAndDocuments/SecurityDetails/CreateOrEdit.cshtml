@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.SecurityDocumentsDetails.SecurityDetailsDTO;
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.EnqSecId" onsubmit="return jQueryAjaxPostSDDS(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.EnqSecId)
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Type of Security</label>
            @Html.DropDownListFor(model => model.SecCode, new SelectList(ViewBag.ListTypeOfSecurity,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
            <span asp-validation-for="SecCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Security Details</label>
            @Html.DropDownListFor(model => model.SecCd, new SelectList(ViewBag.ListDdlSecurityDetailsType,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
            <span asp-validation-for="SecCd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Description</label>
            @Html.TextBoxFor(model => model.EnqSecDesc, new { @class = "form-control" })
            <span asp-validation-for="EnqSecDesc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Name of Holder</label>
            @Html.TextBoxFor(model => model.EnqSecName, new { @class = "form-control" })
            <span asp-validation-for="EnqSecName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Relation</label>
            @Html.DropDownListFor(model => model.PromrelCd, new SelectList(ViewBag.ListDdlRelationType,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
            <span asp-validation-for="PromrelCd" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="inputEmail4" class="form-label">Value (In Lakhs.)</label>
            @Html.TextBoxFor(model => model.EnqSecValue, new { @class = "form-control",@type="number",@min="0" })
            <span asp-validation-for="EnqSecValue" class="text-danger"></span>
        </div>
            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
