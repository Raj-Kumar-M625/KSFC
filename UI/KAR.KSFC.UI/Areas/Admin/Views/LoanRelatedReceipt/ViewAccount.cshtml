@model KAR.KSFC.Components.Common.Dto.LoanAccounting.LoanAccountingDTO

@{

}
<div><h2 id="textCenter">Loan Related Receipts</h2></div>
<div id="LoanRelatedDIV">
    <span id="spanErrorMsg" class="text-danger"></span>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="GenerateReceipts-tab" data-bs-toggle="tab" data-bs-target="#GenerateReceipts" type="button" role="tab" aria-controls="GenerateReceipts" aria-selected="false">Generate Receipts</button>
            <div class="progress">
                <div id="GenerateReceiptsProgressBar" class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="SaveReceipts-tab" data-bs-toggle="tab" data-bs-target="#SaveReceipts" type="button" role="tab" aria-controls="SaveReceipts" aria-selected="false">Receipt Payment</button>
            <div class="progress">
                <div id="SaveReceiptsProgressBar" class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="GenerateReceipts" role="tabpanel" aria-labelledby="GenerateReceipts-tab">
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                @await Html.PartialAsync("_AccountNumber")
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                        <button class="accordion-button" id="GenerateReceipts_detail_accor_btn" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="true" aria-controls="panelsStayOpen-collapseTwo">
                     <strong>List of Loan Related Receipts</strong>
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">
                        <div class="accordion-body">
                            <div id="view-all-GenerateReceipts">
                                @await Html.PartialAsync("/Areas/Admin/Views/LoanRelatedReceipt/GenerateReceipt/_ViewAll.cshtml",Model.ReceiptPaymentDetails)
                            </div>
                            <div class="modal" tabindex="-1" role="dialog" id="modelGenerateReceiptDetails">
                                <div class="modal-dialog modal-xl" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"></h5>
                                            <button type="button" class="close" data-dismiss="modal" onclick="ClosePopupFormLA();" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/Admin/LoanRelatedReceipt/" class="btn btn-info btn-lg text-white mb-2 mt-2">Previous</a>
                            <input type="submit" class="btn btn-info btn-lg mb-2 mt-2 submit float-end" id="btnTabGenerateReceipts" value="&nbsp &nbsp Next &nbsp &nbsp" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="SaveReceipts" role="tabpanel" aria-labelledby="SaveReceipts-tab">
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                @await Html.PartialAsync("_AccountNumber")
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                        <button class="accordion-button" id="SaveReceipts_detail_accor_btn" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="true" aria-controls="panelsStayOpen-collapseThree">
                            <b>Loan Related Payments</b>
                        </button>
                    </h2>
                    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingThree">
                        <div class="accordion-body">
                            <div id="view-all-ReceiptPayment">
                                @await Html.PartialAsync("/Areas/Admin/Views/LoanRelatedReceipt/SavedReceipt/_ViewAll.cshtml",Model.PaymentRecipetList)
                            </div>
                            <div class="modal" tabindex="-1" role="dialog" id="modelReceiptPaymentDetails">
                                <div class="modal-dialog modal-xl" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"></h5>
                                            <button type="button" class="close" data-dismiss="modal" onclick="ClosePopupFormLA();" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-lg  mb-2 mt-2 previous" id="previousbtnSaveReceiptsTab">Previous</button>
                            <a href="/Admin/Home/LoanAccountingIndex" class="btn btn-info btn-lg  mb-2 mt-2 next float-end" id="nextbutton">&nbsp; &nbsp;Next&nbsp; &nbsp;</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
<script src="~/js/LA.js" asp-append-version="true"></script>
<script language="text/javascript" type="text/javascript">
    $(document).ready(function () {

        ReloadGenerateReceipts();
        ReloadSaveReceipts();
        if("@ViewBag.Module" =="Payment")
        {
            $("#GenerateReceipts").removeClass("active");
            $("#GenerateReceipts-tab").removeClass("active");



            $("#SaveReceipts").addClass("active");
            $("#SaveReceipts-tab").addClass("active");
            $("#SaveReceipts-tab").addClass("show");
            $("#SaveReceipts").addClass("show");

        }

    });
</script>