@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmUnitProductsDTO>
@{
    int count = 0;
}

<a onclick="showInPopup('@Url.Action("Create","Product",new {AccountNumber = ViewBag.AccountNumber,OffCd=ViewBag.OffcCd,LoanSub=ViewBag.LoanSub},Context.Request.Scheme)','Add New Product Details','Product')" class="btn btn-primary text-white mb-2 mt-2" ><em class="fa fa-plus"></em>Add New Product Details</a>

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblProductDatatable" aria-labelledby="ProductDetails-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th6a">Industry</th>
                <th class="th6a">Product</th>
                <th class="th5">Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count() > 0){
        @foreach (var item in Model)
        {    
            count++;
            <tr>
                 <td>@count</td>
                     
                <td>@Html.DisplayFor(modelItem => item.IndDets)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProdDets)</td>
                    <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","Product",new {id=item.UniqueId},Context.Request.Scheme)','View Product Details','Product')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                        <a onclick="showInPopup('@Url.Action("Edit","Product",new {id=item.UniqueId},Context.Request.Scheme)','Edit Product Details','Product')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            <a onclick="return JqueryCUIDeleteMethod('@Url.Action("Delete","Product",new {id=item.UniqueId},Context.Request.Scheme)','Product')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>
                </td>
            </tr>
        }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table> 
</div>
<script>
    var rowCount = document.getElementById('tblProductDatatable').rows.length;

    $(document).ready(function () {
        $('#tblProductDatatable').DataTable();
    });
</script>