@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmUnitAddressDTO>
@{
    int count = 0;
}
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblChangeLocation1" aria-labelledby="RegisterDetails-tab">
        <thead>
             <tr>
                 <th class="th1">S. No.</th>
                <th class="th3">Type of Address</th>
                <th class="th3">District</th>
                <th class="th3">Taluka</th> 
                <th class="th3">Hobli</th>
                <th class="th3">Village</th>
                <th class="th4a">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.TblAddressCdtab.AddtypeDets)</td>
                        <td>@Html.DisplayFor(modelItem => item.DistrictName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TalukName)</td>
                        <td>@Html.DisplayFor(modelItem => item.HobliName)</td>
                        <td>@Html.DisplayFor(modelItem => item.VillageName)</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","ChangeLocation",new {id=item.IdmUtAddressRowid},Context.Request.Scheme)','View Change in Address Details','ChangeLocationAddress')" class="btn btn-warning text-white" ><em class="fa fa-eye"></em> View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","ChangeLocation",new {id=item.IdmUtAddressRowid},Context.Request.Scheme)','Edit Change in Address Details','ChangeLocationAddress')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
    </table> 
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#tblChangeLocation1').DataTable();
    });
</script>