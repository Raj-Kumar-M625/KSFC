@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmPromAssetDetDTO>
@{
    int count = 0;
    var account = ViewBag.AccountNumber;
    var loansub = ViewBag.LoanSub;
    var offccd = ViewBag.OffcCd;
    var inunit = ViewBag.InUnit;
}

<a onclick="showInPopup('@Url.Action("Create","AssetDetails",new {accountNumber = ViewBag.AccountNumber,LoanSub=@ViewBag.LoanSub,OffcCd=@ViewBag.OffcCd,inunit = inunit},Context.Request.Scheme)','Add New Asset Details','AssetDetails')" class="btn btn-primary text-white mb-2 mt-2" >  <em class="fa fa-plus"></em> Add New Asset Information</a>

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xxl" id="tblAssetDetails"aria-labelledby="AssetDetails-tab">
        <thead>
            <tr>
                <th class="th2">S. No.</th>
                <th class="th3">Name of Promoter</th>
                <th class="th5">Asset type</th>
                <th class="th3a">Value</th>
                <th class="th5a">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
              @foreach (var item in Model)
              {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.PromoterName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AssettypeDets)</td>
                    <td align="right">@Html.DisplayFor(modelItem => item.IdmAssetValue)</td>
                    <td class="textCenter">
                        <a onclick="showInPopup('@Url.Action("ViewRecord","AssetDetails",new{id=item.UniqueId},Context.Request.Scheme)','View Asset Details','AssetDetails')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                        <a onclick="showInPopup('@Url.Action("Edit","AssetDetails",new{id=item.UniqueId},Context.Request.Scheme)','Edit Asset Details','AssetDetails')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                        <a onclick="return JqueryCUIDeleteMethod('@Url.Action("Delete","AssetDetails",new {id=item.UniqueId},Context.Request.Scheme)','AssetDetails')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>
                    </td>
                </tr>
              }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblAssetDetails').DataTable();
    });
</script>