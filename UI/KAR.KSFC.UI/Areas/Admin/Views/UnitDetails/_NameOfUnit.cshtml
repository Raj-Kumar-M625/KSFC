@using KAR.KSFC.Components.Common.Dto.IDM
@model KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmUnitDetailDTO
@{
    Layout = null;
    LoanAccountNumberDTO LoanAccountDetails = ViewBag.LoanDetails;
}
<div>
    <div>

        <form asp-action="Update" onsubmit="return UnitOfNamePost(this);  ClearPopupFormsh();">
            <input type="hidden" value="@Model.LoanAcc" asp-for="@Model.LoanAcc" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label font-weight-bold"><strong>Existing Name</strong></label>
                <div class="col-sm-3">
                    @if (Model.TblUnitMast != null)
                    {
                        <input type="text" class="form-control" value="@Model.TblUnitMast.UtName" readonly="readonly" id="UnitName">

                    }
                    else
                    {
                        <input type="text" class="form-control" value="" readonly="readonly" id="UtName">

                    }
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputPassword3" class="col-sm-2 col-form-label font-weight-bold"><strong>Enter New Name</strong></label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" asp-for="Name" id="txtname" max="100">
                </div>
            </div>
            <div>
                @* <a href="/Admin/UnitDetails/" class="btn btn-info btn-lg text-white mb-2 mt-3"></a>*@
                <input type="submit" value="&nbsp &nbsp Save &nbsp &nbsp" class="btn btn-info btn-sm next float-end" id="btnsubmit" style="margin-top:-4%" />
            </div>
        </form>
    </div>
</div>
<script>
    $('input[id="txtname"]').change(function () {
        if ($(this).val()) {
            $("input[id='btnsubmit']").removeAttr('disabled');
        }
    });
</script>