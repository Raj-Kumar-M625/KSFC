@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmPromAddressDTO>
@{
    int count = 0;
    var account = ViewBag.AccountNumber;
    var offcd =   ViewBag.OffcCd;
    var inunit =   ViewBag.InUnit;
    var loansub = ViewBag.LoanSub;
}

@*<a onclick="showInPopup('@Url.Action("Create","PromoterAddress",new {accountNumber = account ,offcd = offcd,  inunit = inunit, loansub = loansub},Context.Request.Scheme)','Add New Promoter Address Details','PromoterAddress')" class="btn btn-primary text-white mb-2 mt-2"><em class="fa fa-plus"></em> Add New Promoter Address</a>*@

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblPromoterAddress" aria-labelledby="PromoterAddressDetails-tab">
        <thead>
            <tr>
                <th class="th2">S. No.</th>
                <th class="th2">Name of Promoter</th>
                <th class="th4">Address</th> 
                <th class="th2">Whether Permanent</th>
                <th class="th4a">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.PromoterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.PromAddress)</td>
                        @if (@item.AdrPermanent == true)
                        {
                            <td> Yes </td>
                        }
                        else
                        {
                            <td> No </td>
                        }
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","PromoterAddress",new{unqid=item.UniqueId},Context.Request.Scheme)','View Promoter Address Details','PromoterAddress')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","PromoterAddress",new{unqid=item.UniqueId},Context.Request.Scheme)','Edit Promoter Address Details','PromoterAddress')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                          @* <a onclick="JqueryCUIDeleteMethod('@Url.Action("Delete","PromoterAddress",new {id=item.UniqueId},Context.Request.Scheme)','PromoterAddress')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>*@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tblPromoterAddress').DataTable();
    });
</script>


