@model List<KAR.KSFC.Components.Common.Dto.AdminModule.AssignRoleDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Role Mapping";
}
<h4 class="text-muted">Module Role Mapping</h4>
<a href="/Admin/Employee?id=@ViewBag.EmployeeNumber">Go Back</a>

 <div class="row mt-3">

            <div class="col-3">
               
                    <ul>
                        <li><b>Employee ID :</b> @ViewBag.EmployeeNumber</li>
                        <li><b>Name :</b> @ViewBag.EmployeeName</li>
                        <li><b>Email :</b> @ViewBag.Email</li>
                        <li><b>Mobile :</b> @ViewBag.Mobile</li>
                    </ul>
                
            </div>
            <div class="col-9">
                <button style="position:relative; float:right" title="View" onclick="showEmpDtlsForRoleMapping('@Url.Action("GetEmpDetails", "RoleMapping", new {id=@ViewBag.EmployeeNumber}, Context.Request.Scheme)', 'Role Mapping', 'add')"
                    data-bs-toggle="modal" data-bs-target="#ksfcEmpDetailsRoleMapping" type="button"
                    tooltip="Assign Office" class="btn btn-primary">
                    Assign Role
                </button>

            </div>
        </div>
@if (ViewBag.showEmpDetails == true)
{
   
    @await Html.PartialAsync("_View", Model)
} else
{
    <div class="container mt-3">
        <div class="row">
            <div class="alert alert-info text-md-center">
                <p>No Result Found</p>
            </div>
        </div>
    </div>
}



<div class="modal fade" id="ksfcEmpDetailsRoleMapping" tabindex="-1" aria-labelledby="roleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-md">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title" id="roleModalLabel">Modal title</h5>
                <span>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="modalOneCloseBtn"></button>
                </span>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer" id="modalFooterKSFC">
                <button class="btn btn-outline-info" id="assignRole" type="button" onclick="AssignRole();">Assign Role</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="ksfcAlertModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-sm">
        <div class="modal-content">
            
            <div class="modal-body" id="popupBodyMsg">
                Are you sure to remove this role?
            </div>
            <div class="modal-footer" id="assignRoleFooterModel" >
                <button type="button" class="btn btn-warning" id="deleteRoleBtn" >Yes</button>
                <button type="button" id="ksfcAlertModalFooterCloseBtn" class="btn btn-outline-primary" data-bs-dismiss="modal" aria-label="Close" onclick="window.location.reload()">Cancel</button>

            </div>
        </div>
    </div>
</div>


@section Scripts {

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script type="text/javascript">
    // just in case for writing some js or jQuery
</script>
}