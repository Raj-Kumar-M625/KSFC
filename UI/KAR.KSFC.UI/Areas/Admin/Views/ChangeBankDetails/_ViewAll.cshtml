@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmChangeBankDetailsDTO>
@{
    int count = 0;
     var account = ViewBag.AccountNumber;
    var loansub = ViewBag.LoanSub;
    var offccd = ViewBag.OffcCd;
}

<a onclick="showInPopup('@Url.Action("Create","ChangeBankDetails",new {accountNumber = @ViewBag.AccountNumber ,LoanSub=@ViewBag.LoanSub,OffcCd=@ViewBag.OffcCd,InUnit=@ViewBag.InUnit},Context.Request.Scheme)','New Bank Details','ChangeBankDetails')" class="btn btn-primary text-white mb-2 mt-2"><em class="fa fa-plus"></em> Add New Bank Details</a>
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblChangeBankDetailsDatatable" aria-labelledby="ChangeBankDetails-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th> 
                <th class="th2">Name of Account Holder</th> 
                <th class="th2">IFSC</th>
                <th class="th4">Name of Bank</th>             
                <th class="th4a">Action</th> 
            </tr>
        </thead>
        <tbody>
             @if(Model.Count() > 0){
           @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.UtBankHolderName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UtIfsc)</td> 
                    <td>@Html.DisplayFor(modelItem => item.UtBank)</td>
                    <td class="textCenter">
                        <a onclick="showInPopup('@Url.Action("ViewRecord","ChangeBankDetails",new{id=item.UniqueId},Context.Request.Scheme)','View Bank Details','ChangeBankDetails')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                        <a onclick="showInPopup('@Url.Action("Edit","ChangeBankDetails",new{id=item.UniqueId},Context.Request.Scheme)','Edit Bank Details','ChangeBankDetails')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                        <a onclick="JqueryCUIDeleteMethod('@Url.Action("Delete","ChangeBankDetails",new {id=item.UniqueId},Context.Request.Scheme)','ChangeBankDetails')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#tblChangeBankDetailsDatatable').DataTable();
    });
</script>