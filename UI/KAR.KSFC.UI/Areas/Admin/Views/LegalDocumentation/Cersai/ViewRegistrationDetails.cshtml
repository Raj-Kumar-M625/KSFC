@using KAR.KSFC.Components.Common.Dto.IDM
@model List<KAR.KSFC.Components.Common.Dto.IDM.IdmCersaiRegDetailsDTO>
@{
    Layout = null;
    int count = 0;

}

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblCersaiDatatable" aria-labelledby="HypothecationList-tab">
        <thead>
            <tr>
                <th class="th2b">S. No.</th>
                <th class="th3">Description of Asset</th>
                <th class="th3a">Value</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                { 
                   if(item.CersaiRegNo != null)
                   {
                       count++;
                      <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.AssetDet)</td>
                        <td align="right">@Html.DisplayFor(modelItem => item.AssetVal)</td>
                      </tr>
                   }

                  
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('tblCersaiDatatable').DataTable();
    });
</script>
