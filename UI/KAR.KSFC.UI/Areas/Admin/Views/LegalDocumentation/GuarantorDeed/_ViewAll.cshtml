@using KAR.KSFC.Components.Common.Dto.IDM
@model List<KAR.KSFC.Components.Common.Dto.IDM.IdmGuarantorDeedDetailsDTO>
@{
    int count = 0;
    LoanAccountNumberDTO LoanAccountDetails = ViewBag.LoanDetails;

}

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblGuarantorDatatable" aria-labelledby="Guarantor-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th2">Name of Guarantor</th>
                <th class="th3a">Value</th>
                <th class="th2">Deed Number</th>
                <th class="th2">Date Of Execution</th>
                <th class="th2a">Action</th>
            </tr>
        </thead>    
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.GuarName)</td>
                        <td align="right">@Html.DisplayFor(modelItem => item.ValueAsset)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeedNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.ExcecutionDate,"{0:yyyy-MM-dd}")</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord", "GuarantorDeed",new {id=item.IdmGuarDeedId},Context.Request.Scheme)','View Guarantor Deed Details','GuarantorDeed')" class="btn btn-warning text-white"><em class="fa fa-eye"></em> View</a>
                            <a onclick="showInPopup('@Url.Action("Update", "GuarantorDeed",new {id=item.IdmGuarDeedId},Context.Request.Scheme)','Edit Guarantor Deed Details','GuarantorDeed')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('tblGuarantorDatatable').DataTable();
    });
</script>
