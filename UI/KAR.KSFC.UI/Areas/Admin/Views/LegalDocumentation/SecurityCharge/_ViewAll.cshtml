@using KAR.KSFC.Components.Common.Dto.IDM

@model List<KAR.KSFC.Components.Common.Dto.IDM.IdmSecurityChargeDTO>
@{
    int count = 0;
        LoanAccountNumberDTO LoanAccountDetails = ViewBag.LoanDetails;


}
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblSecurityCharge" aria-labelledby="SecurityCharge-tab">
        <thead>
            <tr>
                <th class="th2b">S. No.</th>
                <th class="th4">Description Of Security</th>
                <th class="th3a">Value</th>
                <th class="th3">Request Letter No.</th>
                <th class="th3">Request Letter Date</th> 
                <th class="th6">Action</th> 
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.SecurityDets)</td>
                        <td align="right">@Html.DisplayFor(modelItem => item.SecurityValue)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestLtrNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestLtrDate,"{0:yyyy-MM-dd}")</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","SecurityCharge",new {id=item.IdmDsbChargeId},Context.Request.Scheme)','View Security Charge Details','SecurityCharge')" class="btn btn-warning text-white"><em class="fa fa-eye"></em> View</a>
                            <a onclick="showInPopup('@Url.Action("Update","SecurityCharge",new {id=item.IdmDsbChargeId},Context.Request.Scheme)','Edit Security Charge Details','SecurityCharge')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('tblSecurityCharge').DataTable();
    });
</script> 
