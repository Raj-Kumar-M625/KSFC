@using KAR.KSFC.Components.Common.Dto.IDM
@model KAR.KSFC.Components.Common.Dto.IDM.IdmSecurityChargeDTO
@{
    Layout = null;
    List<ldDocumentDto> securityChargeDetails = ViewBag.Documentlist;
}

<div>
    <div>
        <form id="SecurityCharge" asp-action="ViewRecord" onsubmit="ClearPopupFormsh();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.LoanAcc, new { @class = "form-control", value=@ViewBag.LoanAcc })
            <div class="row">
                <div class="col-md-4">
                    <strong><label class="form-label">Type of Security</label></strong>
                    @Html.DropDownListFor(m => m.TblSecurityRefnoMast.SecurityCd, new SelectList(ViewBag.SecurityCategory, "Value", "Text"), "---Select Category---", new { @class = "form-select" , @disabled = "disabled"})

                </div>
                <div class="col-md-4">
                    <strong><label class="form-label"> Security Details</label></strong>
                    @Html.DropDownListFor(m => m.TblSecurityRefnoMast.SecCd, new SelectList(ViewBag.SecurityType, "Value", "Text"), "---Select Type---", new { @class = "form-select", @disabled = "disabled" })

                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">Value</label></strong>
                    @Html.TextBoxFor(m => m.SecurityValue,"{0:n2}", new { @class = "form-control", @disabled = "disabled" ,@style="text-align:right" })
                </div>
               
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <strong><label class="form-label">Description of Security</label></strong>
                    @Html.TextAreaFor(m => m.SecurityDets, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">Type of Charge</label></strong>
                    @Html.DropDownListFor(m => m.ChargeTypeCd, new List<SelectListItem>()
                    {
                    new SelectListItem(){Text="Second Charge",Value = "1"},
                    new SelectListItem(){Text="Third Charge",Value = "2"},
                    new SelectListItem(){Text="Pari Passu Charge",Value = "3"}
                    }, "---Select Type of Charge---", new { @class = "form-select", @id="ChargeTypeCd",@disabled = "disabled"})
                    <span asp-validation-for="ChargeTypeCd" class="text-danger"></span>
                </div>
                 <div class="col-md-4">
                    <strong><label class="form-label">NoC Issued By</label></strong>
                    @Html.TextAreaFor(m => m.NocIssueBy, new { @class = "form-control", @disabled = "disabled" })
                </div>
               
            </div>
            <br />
          <div class="row">
            <div class="col-md-4">
                <strong><label class="form-label">NoC Issued To</label></strong>
                @Html.TextAreaFor(m => m.NocIssueTo, new { @class = "form-control", @disabled = "disabled" })
            </div>
            <div class="col-md-4">
                <strong><label class="form-label">NoC Date</label></strong>
                @Html.TextBoxFor(m => m.NocDate,"{0:yyyy-MM-dd}", new { @class = "form-control",type="date", @disabled = "disabled" ,onkeydown = "return false"  })
            </div>
            <div class="col-md-4">
                <strong><label class="form-label">Letter of Authorization By</label></strong>
                @Html.TextAreaFor(m => m.AuthLetterBy, new { @class = "form-control", @disabled = "disabled" })
            </div>
          </div>
            <br />
           <div class="row">
             <div class="col-md-4">
                <strong><label class="form-label">Letter of Authorization Date</label></strong>
                @Html.TextBoxFor(m => m.AuthLetterDate,"{0:yyyy-MM-dd}", new { @class = "form-control",type="date", @disabled = "disabled" ,onkeydown = "return false"  })
             </div>
              <div class="col-md-4">
                <strong><label class="form-label">Board Resolution Date</label></strong>
                @Html.TextBoxFor(m => m.BoardResolutionDate,"{0:yyyy-MM-dd}", new { @class = "form-control",type="date", @disabled = "disabled" ,onkeydown = "return false"  })
              </div>
              <div class="col-md-4">
                <strong><label class="form-label">MoE Insured Date</label></strong>
                @Html.TextBoxFor(m => m.MoeInsuredDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type="date",@disabled = "disabled",onkeydown = "return false"  })
             </div>
           </div>
         <br />
            <div class="row">
                <div class="col-md-4">
                    <strong><label class="form-label">Request Letter No.</label></strong>
                    @Html.TextBoxFor(m => m.RequestLtrNo,  new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="col-md-4">
                    <strong><label class="form-label">Request Letter Date</label></strong>
                    @Html.TextBoxFor(m => m.RequestLtrDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type="date", @disabled = "disabled",onkeydown = "return false" })
                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">IFSC of Bank</label></strong>
                    @Html.DropDownListFor(m => m.BankIfscId, new SelectList(ViewBag.bankifsc, "Value", "Text"), "---Select IFSC Code---", new { @class = "form-select" , @disabled = "disabled"})
                </div>
            </div>
            <br />
            <div class="row">

                <div class="col-md-4">
                    <strong><label class="form-label">Bank Request Letter Number</label></strong>
                    @Html.TextBoxFor(m => m.BankRequestLtrNo, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">Bank Request Letter Date</label></strong>
                    @Html.TextBoxFor(m => m.BankRequestLtrDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type="date", @disabled = "disabled" ,onkeydown = "return false" })
                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">Purpose</label></strong>
                    @Html.TextAreaFor(m => m.ChargePurpose, new { @class = "form-control", @disabled = "disabled" })
                </div>

            </div>
            <br /> 
            <div class="row">
               
                <div class="col-md-4">
                    <strong><label class="form-label">Charge Details</label></strong>
                    @Html.TextAreaFor(m => m.ChargeDetails, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-4">
                    <strong><label class="form-label">Conditions</label></strong>
                    @Html.TextAreaFor(m => m.ChargeConditions, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
               
               
            </div>
            <br />
            <div class="row">
               
                            
            </div>
            <br />
            <div>
                @await Html.PartialAsync("/Areas/Admin/Views/Shared/_ViewDocument.cshtml",securityChargeDetails)
            </div>
        </form>
    </div>
</div>
