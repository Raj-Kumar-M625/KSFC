@using KAR.KSFC.Components.Common.Dto.IDM

@model List<KAR.KSFC.Components.Common.Dto.IDM.IdmSecurityDetailsDTO>
@{
    int count = 0;
    LoanAccountNumberDTO LoanAccountDetails = ViewBag.LoanDetails;

}

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblSecurityDatatable" aria-labelledby="SecurityDetails-tab">
        <thead>
            <tr>
                <th class="th2b">S. No.</th>
                <th class="th3">Description of Security</th>
                <th class="th3a">Value</th>
                <th class="th3">Deed Number</th>
                <th class="th3">Date of Execution</th>
                <th class="th6">Action</th>
            </tr>
        </thead>
        <tbody>
           @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.PjSecDets)</td> 
                        <td align="right">@Html.DisplayFor(modelItem => item.SecurityValue,"{0:n2}")</td>
                        <td>@Html.DisplayFor(modelItem => item.DeedNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.ExecutionDate,"{0:yyyy-MM-dd}")</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","PrimarySecurity",new {id=item.IdmDeedDetId},Context.Request.Scheme)','View Primary Security Details','PrimarySecurity')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","PrimarySecurity",new {id=item.IdmDeedDetId},Context.Request.Scheme)','Edit Primary Security Details','PrimarySecurity')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tblSecurityDatatable').DataTable();
    });
</script>
