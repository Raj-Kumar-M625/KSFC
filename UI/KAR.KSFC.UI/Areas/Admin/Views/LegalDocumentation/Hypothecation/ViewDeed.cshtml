@using KAR.KSFC.Components.Common.Dto.IDM
@model List<KAR.KSFC.Components.Common.Dto.IDM.HypoAssetDetailDTO>
@{
    Layout = null;
    int count = 0;
}


<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblHypothecationViewDeed" aria-labelledby="HypothecationList-tab">
        <thead>
            <tr>
                <th class="th2b">S. No.</th>
                <th class="th3">Deed No</th>
                <th class="th3a">Value</th>
                <th class="th3">From Date</th>
                <th class="th3">To Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>
                        <a style="color:#1964d5; cursor:pointer" onclick="showInPopup('@Url.Action("ViewDeedDetails","Hypothecation",new {DeedNo=item.HypothNo,AccountNumber = item.LoanAcc},Context.Request.Scheme)','View Deed Details','Hypothecation')">@item.HypothNo</a>
                        </td>
                        <td></td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate,"{0:yyyy-MM-dd}")</td>
                        <td>@Html.DisplayFor(modelItem => item.ModifiedDate,"{0:yyyy-MM-dd}")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('tblHypothecationViewDeed').DataTable();
    });
</script>
