@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.IdmPromoterDTO>
@{
    int count = 0;
}

<a onclick="showInPopup('@Url.Action("Create","PromoterDetails",new{accountNumber = ViewBag.AccountNumber,LoanSub=@ViewBag.LoanSub,OffcCd=@ViewBag.OffcCd,InUnit=@ViewBag.InUnit},Context.Request.Scheme)','Add New Promoter Details','PromoterProfile')" class="btn btn-primary text-white mb-2 mt-2" ><em class="fa fa-plus"></em> Add New Promoter</a>

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblPromoterProfile" aria-labelledby="PromoterDetails-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th2">Name of Promoter</th>
                <th class="th2">Designation</th>
                <th class="th1">Gender</th>
                <th class="th2">Class</th>
                <th class="th2">PAN</th>
                <th class="th3">Domicile</th>
                <th class="th6">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.PromName)</td>
                        <td>@Html.DisplayFor(modelItem => item.PdesigDet)</td>
                        <td>@Html.DisplayFor(modelItem => item.PromGender)</td>
                        <td>@Html.DisplayFor(modelItem => item.PclassDet)</td>
                        <td>@Html.DisplayFor(modelItem => item.PromPan)</td>
                        <td>@Html.DisplayFor(modelItem => item.PdomDet)</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","PromoterDetails",new{id=item.UniqueId},Context.Request.Scheme)','View Promoter Profile Details','PromoterProfile')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","PromoterDetails",new{id=item.UniqueId},Context.Request.Scheme)','Edit Promoter Profile Details','PromoterProfile')" class="btn btn-primary text-white"><em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            <a onclick="JqueryCUIDeleteMethod('@Url.Action("Delete","PromoterDetails",new {id=item.UniqueId},Context.Request.Scheme)','PromoterProfile')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tblPromoterProfile').DataTable();
    });
</script>
