@model List<KAR.KSFC.Components.Common.Dto.IDM.CreationOfSecurityandAquisitionAsset.TblIdmIrFurnDTO>
@{
    int count = 0;
}
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblFurnitureAcquisition" aria-labelledby="FurnitureAcquisition-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th3">Item No</th>
                <th class="th3">Item Details</th>
                <th class="th3">Mem Value</th>
                <th class="th3">Actual Value</th>
                <th class="th3a">Action</th>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.IrfItem)</td>
                    <td>@Html.DisplayFor(modelItem => item.IrfItemDets)</td>
                    <td>@Html.DisplayFor(modelItem => item.IrfAmt)</td>
                    <td>@Html.DisplayFor(modelItem => item.IrfAamt)</td>
                    <td class="textCenter">
                        <a onclick="showInPopup('@Url.Action("ViewRecord","FurnitureAcquisition",new {id=item.IrfId},Context.Request.Scheme)','View Furniture Acquisition Details','FurnitureAcquisition')" class="btn btn-warning text-white"><i class="fa fa-eye" aria-hidden="true"></i>  View</a>
                        <a onclick="showInPopup('@Url.Action("Edit","FurnitureAcquisition",new {id=item.IrfId},Context.Request.Scheme)','Edit Furniture Acquisition Details','FurnitureAcquisition')" class="btn btn-primary text-white"> <i class="fa fa-pencil" aria-hidden="true"></i>   Edit</a>
                            
                    </td>
                </tr>
            }
            }
            else
            {
            <tr>
                <td colspan="8">
                    No Data Available.
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#tblFurnitureAcquisition').DataTable();
    });
</script>