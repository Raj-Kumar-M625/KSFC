@model List<KAR.KSFC.Components.Common.Dto.IDM.CreationOfSecurityandAquisitionAsset.IdmIrPlmcDTO>
@{
    int count = 0;
    var account = ViewBag.AccountNumber;
    var loansub = ViewBag.LoanSub;
}
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblMachineryAcquisitionDatatable" aria-labelledby="MachineryAcquisitionData-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th2">Item No</th>
                <th class="th3a">Item Details</th>
                <th class="th2">Mem Value</th>
                <th class="th2">Actual Value</th>
                <th class="th2a">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.IrPlmcItem)</td>
                        <td>@Html.DisplayFor(modelItem => item.IrPlmcItemDets)</td>
                        <td>@Html.DisplayFor(modelItem => item.IrPlmcAmt)</td>
                        <td>@Html.DisplayFor(modelItem => item.IrPlmcAamt)</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","MachineryAcquisition",new {id=item.UniqueId},Context.Request.Scheme)','View Machinery Acquisition Details','Machinery Acquisition')" class="btn btn-warning text-white"><i class="fa fa-eye" aria-hidden="true"></i>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","MachineryAcquisition",new {id=item.UniqueId},Context.Request.Scheme)','Edit Machinery Acquisition Details','Machinery Acquisition')" class="btn btn-primary text-white"> <i class="fa fa-pencil" aria-hidden="true"></i>   Edit</a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblMachineryAcquisitionDatatable').DataTable();
    });
</script>