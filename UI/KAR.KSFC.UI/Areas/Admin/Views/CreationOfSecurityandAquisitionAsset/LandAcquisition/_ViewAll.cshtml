@model List<KAR.KSFC.Components.Common.Dto.IDM.CreationOfSecurityandAquisitionAsset.TblIdmIrLandDTO>
@{
    int count = 0;
    var account = ViewBag.AccountNumber;
    var loansub = ViewBag.LoanSub;
}
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblLandAcquisitionDatatable" aria-labelledby="LandAcquisitionData-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th2">Land Reference No.</th>  
                <th class="th3">Actual Land Area</th>
                <th class="th3">Actual Land Type</th>              
                <th class="th2a">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.IrlIno)</td>    
                        <td>@Html.DisplayFor(modelItem => item.IrlArea)</td>
                        <td>@Html.DisplayFor(modelItem => item.LandTyDet)</td>                    
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","LandAcquisition",new {id=item.UniqueId},Context.Request.Scheme)','View Land Acquisition Details','Land Acquisition')" class="btn btn-warning text-white"><i class="fa fa-eye" aria-hidden="true"></i>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","LandAcquisition",new {id=item.UniqueId},Context.Request.Scheme)','Edit Land Acquisition Details','Land Acquisition')" class="btn btn-primary text-white"> <i class="fa fa-pencil" aria-hidden="true"></i>   Edit</a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblLandAcquisitionDatatable').DataTable();
    });
</script>