@model KAR.KSFC.Components.Common.Dto.IDM.CreationOfSecurityandAquisitionAsset.TblIdmBuildingAcquisitionDetailsDTO
@{
    Layout = null;
}
<div>
    <div>
        <form id="BuildingAquisitionDetails" asp-action="ViewRecord" onsubmit="ClearPopupFormac();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.LoanAcc, new { @class = "form-control", value=@ViewBag.LoanAcc })

            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Item No.</label></strong>
                    @Html.TextBoxFor(m => m.IrbItem, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Roof Type</label></strong>
                    @Html.TextBoxFor(m => m.RoofType, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Building details</label></strong>
                    @Html.TextBoxFor(m => m.IrbBldgDetails, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Mem Plinth Area</label></strong>
                    @Html.TextBoxFor(m => m.IrbArea, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Mem Total Cost</label></strong>
                    @Html.TextBoxFor(m => m.IrbValue,"{0:n2}", new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Acquired Status(Y/N)</label></strong>
                    @Html.DropDownListFor(m => m.IrbStatus, new List<SelectListItem>()
                    {
                    new SelectListItem(){Text="Yes",Value = "1"},
                    new SelectListItem(){Text="No",Value = "0"},
                    }, "--- Select Acquired Status ---", new { @class = "form-select",@disabled = "disabled", @id="IrbStatus"})
                    <span asp-validation-for="IrbStatus" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Actual Plinth Area</label></strong>
                    @Html.TextBoxFor(m => m.IrbAPArea, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Actual Unit Cost per Sq.Mtr</label></strong>
                    @Html.TextBoxFor(m => m.IrbUnitCost,"{0:n2}", new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Actual Total Cost</label></strong>
                    @Html.TextBoxFor(m => m.IrbATCost,"{0:n2}", new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Percentage Completed</label></strong>
                    @Html.TextBoxFor(m => m.IrbPercentage, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Building Construction Status</label></strong>
                    @Html.TextBoxFor(m => m.IrbBldgConstStatus, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <br />
            <br />
        </form>
    </div>
</div>