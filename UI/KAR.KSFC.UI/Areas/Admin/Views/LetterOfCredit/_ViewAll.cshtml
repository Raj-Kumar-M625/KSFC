@model List<KAR.KSFC.Components.Common.Dto.IDM.InspectionOfUnit.IdmDsbLetterOfCreditDTO>
@{
    int count = 0;
    var Acc = ViewBag.AccountNumber;
}
<a onclick="showInPopup('@Url.Action("Create","LetterOfCredit",new {accountNumber = @ViewBag.AccountNumber ,LoanSub=@ViewBag.LoanSub,OffcCd=@ViewBag.OffcCd},Context.Request.Scheme)','New Letter Of Credit','LetterOfCredit')" class="btn btn-primary text-white mb-2 mt-2"><em class="fa fa-plus"></em> Add New Letter Of Credit Details</a>
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblLetterOfCreditDatatable" aria-labelledby="LetterOfCreditDetails-tab">
        <thead>
            <tr>
                <th class="th1">S. No.</th>
                <th class="th8">Item Code</th>
                <th class="th5">Item Description</th>
                <th class="th3">Name of Supplier</th>
                <th class="th4a">Amount</th>
                <th class="th6">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.DlCrdtItmNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.DlCrdtItmDets)</td>
                        <td>@Html.DisplayFor(modelItem => item.DlCrdtSup)</td>
                        <td align="right">@Html.DisplayFor(modelItem => item.DlCrdtAmt)</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","LetterOfCredit",new {id=item.UniqueId},Context.Request.Scheme)','View Letter Of Credit Details','LetterOfCredit')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","LetterOfCredit",new {id=item.UniqueId},Context.Request.Scheme)','Edit Letter Of Credit Details','LetterOfCredit')" class="btn btn-primary text-white"> <em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            <a onclick="JqueryInspectionDeleteMethod('@Url.Action("Delete","LetterOfCredit",new {id=item.UniqueId},Context.Request.Scheme)','LetterOfCredit')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tblLetterOfCreditDatatable').DataTable();
    });
</script>
