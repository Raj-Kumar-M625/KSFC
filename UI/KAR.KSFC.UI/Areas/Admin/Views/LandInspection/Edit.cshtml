            <br />
            <div class="row">
                <div class="col-md-4">
                    <strong><label class="form-label">Land Development Details<span  id="spanDet1"> *</span></label></strong>
                    @Html.TextAreaFor(m => m.DcLndDets, new { @class = "form-control disable",@maxlength = "200", @id = "ldDevDt", @required = "required"})
                    <span  id="spanDet">Max: 200 Characters</span><br />
