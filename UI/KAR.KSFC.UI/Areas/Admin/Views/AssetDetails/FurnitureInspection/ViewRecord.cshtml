@using KAR.KSFC.Components.Common.Dto.IDM
@model KAR.KSFC.Components.Common.Dto.IDM.InspectionOfUnit.IdmDChgFurnDTO
@{
    Layout = null;
    var furn = ViewBag.Furniture;
}


<div>
    <div>
        <form id="FurnitureInspectionDetails" asp-action="ViewRecord" onsubmit="ClearPopupFormsh();">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Item No</label></strong>
                    @Html.TextBoxFor(m => m.FurnItemNo, new { @class = "form-control", @required = "required",onkeydown="return event.keyCode !== 69",@disabled = "disabled"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Total Security Created</label></strong>
                    @Html.TextBoxFor(m => m.FurnSec,new { @class = "form-control", @required = "required",@type="number",onkeydown="return event.keyCode !== 69",@disabled = "disabled",@style="text-align:right"})
                </div>

            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Item Details</label></strong>
                    @Html.TextAreaFor(m => m.FurnDetails, new { @class = "form-select",@maxlength = "200", @required = "required",@disabled = "disabled"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Security considered for Release</label></strong>
                    @Html.TextBoxFor(m => m.DfurnSecRel,
                    new { @class = "form-control", @type="number",onkeydown="return event.keyCode !== 69", @disabled = "disabled",@style="text-align:right"})
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Name of Supplier</label></strong>
                    @Html.TextBoxFor(m => m.FurnSupp, new { @class = "form-control",@required = "required",@maxlength = "100",@disabled = "disabled" })
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Eligibility till previous Inspection</label></strong>
                    @Html.TextBoxFor(m => m.Eligibility, new { @class = "form-control", @type="number",onkeydown="return event.keyCode !== 69",@disabled = "disabled"})
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Address of Supplier</label></strong>
                    @Html.TextBoxFor(m => m.FurnSuppAdd1, new { @class = "form-control", @required = "required",@maxlength = "100",@disabled = "disabled"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Supplier Registered Status(Y/N)<span id="spanDet1"> *</span></label></strong>
                    @Html.DropDownListFor(m => m.FurnReg, new List<SelectListItem>()
                    {
                    new SelectListItem(){Text="Yes",Value = "1"},
                    new SelectListItem(){Text="No",Value = "0"}
                    },"---Select Registered Status---", new { @class = "form-select",@disabled = "disabled"})
                    <span asp-validation-for="FurnReg" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Quantity</label></strong>
                    @Html.TextBoxFor(m => m.FurnQty, new { @class = "form-control",@type="number",onkeydown="return event.keyCode !== 69",@required = "required",@disabled = "disabled"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Tax</label></strong>
                    @Html.TextBoxFor(m => m.FurnTax,"{0:n2}", new { @class = "form-control",onkeydown="return event.keyCode !== 69", @disabled = "disabled",@style="text-align:right"})
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Basic Cost</label></strong>
                    @Html.TextBoxFor(m => m.FurnCost,"{0:n2}", new { @class = "form-control",onkeydown="return event.keyCode !== 69",@required = "required",@disabled = "disabled",@style="text-align:right"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Requested Date</label></strong>
                    @Html.TextBoxFor(m => m.FurnRequDate, "{0:yyyy-MM-dd}",new { @class = "form-control",@required = "required",type="date",@disabled = "disabled" })
                </div>
            </div>
            <br />
            <div class="row">
                @* <div class="col-md-6">
                <strong><label class="form-label"> Acquistion Status(Y/N)</label></strong>
                @Html.DropDownListFor(m => m.FurnSat, new List<SelectListItem>()
                {
                new SelectListItem(){Text="Fully Aquired",Value = "0"},
                new SelectListItem(){Text="Partially Acquired",Value = "1"},
                new SelectListItem(){Text="Canceled Aquisition",Value = "2"}
                },"---Select Acquisition Status---", new { @class = "form-select", @required = "required",@disabled = "disabled"})
                </div>

                <div class="col-md-6">
                <strong><label class="form-label">Acquired Date</label></strong>
                @Html.TextBoxFor(m => m.FurnStatChangeDate,"{0:yyyy-MM-dd}", new { @class = "form-control", @required = "required",type="date",@disabled = "disabled",onkeydown="return false" })
                </div>*@
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Total Cost</label></strong>
                    @Html.TextBoxFor(m => m.FurnTotalCost,"{0:n2}", new { @class = "form-control",onkeydown="return event.keyCode !== 69", @disabled = "disabled",@dir="rtl"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Invoice No</label></strong>
                    @Html.TextBoxFor(m => m.FurnInvoiceNo, new { @class = "form-control", @type="number",onkeydown="return event.keyCode !== 69",@required = "required",@disabled = "disabled"})
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Total Cost (Actual)</label></strong>
                    @Html.TextBoxFor(m => m.FurnActualCost,"{0:n2}", new { @class = "form-control",onkeydown="return event.keyCode !== 69", @disabled = "disabled",@style="text-align:right"})
                </div>
                <div class="col-md-6">
                    <strong><label class="form-label">Invoice Date</label></strong>
                    @Html.TextBoxFor(m => m.FurnInvoiceDate,"{0:yyyy-MM-dd}", new { @class = "form-control",  @type="date",@required = "required",@disabled = "disabled",onkeydown="return false" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <strong><label class="form-label">Delivery (Weeks)</label></strong>
                    @Html.TextBoxFor(m => m.FurnDeleiverInWeek, new { @class = "form-control", @type="number",onkeydown="return event.keyCode !== 69",@required = "required",@disabled = "disabled"})
                </div>
            </div>
            <br />
            <div @*id="Furniture"*@>
                <p><h4>Furniture/Equipment Release Details</h4></p>
                <div class="row">
                    <div class="col-md-4">
                        <strong><label class="form-label">Total Release</label></strong>
                        @Html.TextBoxFor(m => m.IrfTotalRelease, new { @class = "form-control", @id = "ldAreain" ,@style="text-align:right",@disabled = "disabled"})

                        <span asp-validation-for="IrfTotalRelease" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <strong><label class="form-label">Acquistion Status(Y/N)<span id="spanDet1"> *</span></label></strong>
                        @Html.DropDownListFor(m => m.FurnSat, new List<SelectListItem>()
                        {
                        new SelectListItem(){Text="Fully Aquired",Value = "0"},
                        new SelectListItem(){Text="Partially Acquired",Value = "1"},
                        new SelectListItem(){Text="Canceled Aquisition",Value = "2"}
                        },"---Select Acquisition Status---", new { @class = "form-select", @id = "AcqStg",@disabled = "disabled"})
                        <span asp-validation-for="FurnSat" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <strong><label class="form-label">Security Considered for Release</label></strong>
                        @Html.TextBoxFor(m => m.IrfSecAmt, new { @class = "form-control", @id = "IrfSecAmt",
                        @onkeypress="return (event.charCode !=8 && event.charCode == 0 || (event.charCode >= 48 && event.charCode <= 57))",@maxlength = "13",@disabled = "disabled",@style="text-align:right"})
                        <span asp-validation-for="IrfSecAmt" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        <strong><label class="form-label">Release Status</label></strong>
                        @Html.DropDownListFor(m => m.IrfRelStat, new List<SelectListItem>()
                        {
                        new SelectListItem(){Text="No Release Yet",Value = "0"},
                        new SelectListItem(){Text="Partially Released",Value = "1"},
                        new SelectListItem(){Text="Fully Released",Value = "2"}
                        },"---Select Release Status---", new { @class = "form-select", @id = "IrlRelStat",@disabled = "disabled"})
                        <span asp-validation-for="IrfRelStat" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <strong><label class="form-label">Acquired Date<span id="spanDet1"> *</span></label></strong>
                        @Html.TextBoxFor(m => m.FurnStatChangeDate,"{0:yyyy-MM-dd}", new { @class = "form-control",type="date",onkeydown="return false",@id = "Acqdate", @disabled = "disabled"})
                        <span asp-validation-for="FurnStatChangeDate" class="text-danger"></span>
                    </div>
                </div>
                <br />
            </div>
        </form>
    </div>
</div>
