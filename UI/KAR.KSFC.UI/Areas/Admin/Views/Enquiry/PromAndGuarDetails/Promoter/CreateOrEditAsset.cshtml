@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.PromoterGuarantorDetails.PromoterAssetsNetWorthDTO
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEditAsset" asp-route-id="@Model.EnqPromassetId" onsubmit="return jQueryAjaxPostPGPD(this); ">
            @Html.HiddenFor(model => model.EnqPromassetId)
            <div class="form-group">
                <label  class="form-label">Name Of Promoter</label>
                @if (ViewBag.PromoterDetailsList != null)
                {
                    @Html.DropDownListFor(model => model.PromoterCode, new SelectList(ViewBag.PromoterDetailsList, "PromoterMaster.PromoterCode", "PromoterMaster.PromoterName"), "-- Please select --", new { @class = "form-select" })
                }
                else
                {
                    <select class ="form-select" name="PromoterCode"  id="PromoterCode" asp-for="PromoterCode" 
                            asp-items="@(new SelectList(string.Empty,"PromoterMaster.PromoterCode","PromoterMaster.PromoterName"))">
                    </select>
                }
                <span asp-validation-for="PromoterCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Asset Category</label>
                @Html.DropDownListFor(model => model.AssetcatCd, new SelectList(ViewBag.ListPromAndGuarAssetCategory, "Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="AssetcatCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Type of Asset</label>
                @Html.DropDownListFor(model => model.AssettypeCd, new SelectList(ViewBag.ListPromAndGuarAssetType, "Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="AssettypeCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Survey / Site / Flat No</label>
                @Html.TextBoxFor(model => model.EnqAssetSiteno, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetSiteno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Site / Flat Address</label>
                @Html.TextBoxFor(model => model.EnqAssetAddr, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Dimension</label>
                @Html.TextBoxFor(model => model.EnqAssetDim, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetDim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Area</label>
                @Html.TextBoxFor(model => model.EnqAssetArea, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Description</label>
                @Html.TextAreaFor(model => model.EnqAssetDesc, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Value</label>
                @Html.TextBoxFor(model => model.EnqAssetValue, new { @class = "form-control" })
                <span asp-validation-for="EnqAssetValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    @if (!ViewBag.IsEdit)
                    {
                        <input type="reset" value="Reset" class="btn btn-secondary" />
                    }

                </div>
            </div>
        </form>

    </div>
</div>
