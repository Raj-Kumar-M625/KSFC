@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.ProjectDetails.ProjectCostDetailsDTO
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.EnqPjcostId" onsubmit="return jQueryAjaxPostPDPC(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.EnqPjcostId)

            <div class="form-group">
                <label for="inputEmail4" class="form-label">Project Cost Component</label>
                @Html.DropDownListFor(model => model.PjcostCd, new SelectList(ViewBag.ListProjectCostComponent,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="PjcostCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Cost</label>
                @Html.TextBoxFor(model => model.EnqPjcostAmt, new { @class = "form-control",@type="number",@min="0" })
                <span asp-validation-for="EnqPjcostAmt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
