@model KAR.KSFC.Components.Common.Dto.EnquirySubmission.AssociateSisterConcernDetails.SisterConcernFinancialDetailsDTO
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.EnqSisfinId" onsubmit="return jQueryAjaxPostASFD(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.EnqSisfinId)

            <div class="form-group">
                <label for="inputEmail4" class="form-label">Name of Associate / Sister Concern</label>
                @Html.DropDownListFor(model => model.EnqSis.EnqSisName, new SelectList(ViewBag.AssociateConcernList,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="EnqSis.EnqSisName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Financial Year</label>
                @Html.DropDownListFor(model => model.FinyearCode, new SelectList(ViewBag.FinancialYearsList,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="FinyearCodeNavigation.FinyearCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.WhProv, new { @class = "form-check-inline" })
                <label for="inputEmail4" class="form-label">Provisional Balance Sheet Details</label>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Financial Component</label>
                @Html.DropDownListFor(model => model.FincompCd, new SelectList(ViewBag.ListFinancialComponent,"Value", "Text"), "-- Please select --", new { @class = "form-select" })
                <span asp-validation-for="FincompCdNavigation.FincompCd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputEmail4" class="form-label">Amount (in Lakhs)</label>
                @Html.TextBoxFor(model => model.EnqFinamt, new { @class = "form-control" })
                <span asp-validation-for="EnqFinamt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <input type="reset" value="Reset" class="btn btn-secondary" />
                </div>
            </div>
        </form>

    </div>
</div>
