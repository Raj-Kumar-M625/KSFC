@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.TblPromoterLiabDetDTO>
@{
    int count = 0;
    var account = ViewBag.AccountNumber;
    var loansub = ViewBag.LoanSub;
    var offccd = ViewBag.OffcCd;
    var inunit = ViewBag.InUnit;
}
<a onclick="showInPopup('@Url.Action("Create","PromoterLiabilityInformation",new {accountNumber = @ViewBag.AccountNumber ,LoanSub=@ViewBag.LoanSub,OffcCd=@ViewBag.OffcCd,UtCd=@ViewBag.InUnit},Context.Request.Scheme)','New Liability Information','LiabilityInformation')" class="btn btn-primary text-white mb-2 mt-2" ><em class="fa fa-plus"></em> Add New Liability Information</a>
<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblLiabilityInfoDatatable" aria-labelledby="PromotorLiabilityDetails-tab">
        <thead>
            <tr>
                <th class="th2">S. No.</th>
                <th class="th4">Name of Promoter</th>
                <th class="th4">Liability Description</th>
                <th class="th3a">Value</th>              
                <th class="th6">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@Html.DisplayFor(modelItem => item.PromoterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LiabDesc)</td>
                        <td align="right">@Html.DisplayFor(modelItem => item.LiabVal)</td>
                        <td class="textCenter">
                            <a onclick="showInPopup('@Url.Action("ViewRecord","PromoterLiabilityInformation",new {id=item.UniqueID},Context.Request.Scheme)','View Liability Information','LiabilityInformation')" class="btn btn-warning text-white"><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                            <a onclick="showInPopup('@Url.Action("Edit","PromoterLiabilityInformation",new {id=item.UniqueID},Context.Request.Scheme)','Edit Liability Information','LiabilityInformation')" class="btn btn-primary text-white"> <em class="fa fa-pencil" aria-hidden="true"></em>   Edit</a>
                            <a onclick="return JqueryCUIDeleteMethod('@Url.Action("Delete","PromoterLiabilityInformation",new {id=item.UniqueID},Context.Request.Scheme)','LiabilityInformation')" class="btn btn-danger"><em class="fa fa-trash-o" aria-hidden="true"></em> Delete </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#tblLiabilityInfoDatatable').DataTable();
    });
</script>
