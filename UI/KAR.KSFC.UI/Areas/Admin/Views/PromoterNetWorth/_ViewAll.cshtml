@model List<KAR.KSFC.Components.Common.Dto.IDM.UnitDetails.TblPromoterNetWortDTO>
@{
    int count = 0;
}

<div class="pre-scrollable">
    <table class="table table-striped table-bordered table-sm table-responsive-xl" id="tblNetWorthDatatable" aria-labelledby="PromoterNetWorth-tab">
        <thead>
            <tr>
                <th class="th2">S. No.</th>
                <th class="th3">Name Of Promoter</th>
                <th class="th3a">Asset Value</th>
                <th class="th4a">Liability Value</th>              
                <th class="th3a">Net Worth</th>              
                <th class="th4a">Action</th>
            </tr>
        </thead>
        <tbody>
             @if (Model.Count() > 0)
            {
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@Html.DisplayFor(modelItem => item.PromoterName)</td>
                    <td align="right">@Html.DisplayFor(modelItem => item.IdmMov)</td>
                    <td align="right">@Html.DisplayFor(modelItem => item.IdmLiab)</td>
                    <td align="right">@Html.DisplayFor(modelItem => item.IdmNetworth)</td>
                    <td class="textCenter">
                        <a onclick="showInPopup('@Url.Action("ViewRecord","PromoterNetWorth",new {id=item.PromoterCode},Context.Request.Scheme)','View NetWorth Details','PromoterNetWorth')" class="btn btn-warning text-white" ><em class="fa fa-eye" aria-hidden="true"></em>  View</a>
                    </td>
                </tr>
            }
            }
            else
            {
                <tr>
                    <td colspan="8">
                        No Data Available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#tblNetWorthDatatable').DataTable();
    });
</script>
